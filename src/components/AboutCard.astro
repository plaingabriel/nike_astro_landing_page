---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div
  class="min-[300px]: flex flex-1 flex-col rounded-3xl border bg-white-400 px-10 py-12 shadow-3xl"
>
  <header>
    <slot />
    <h3 class="my-4 font-palanquin text-3xl font-bold">{title}</h3>
  </header>
  <main>
    <p class="text-pretty font-montserrat text-lg leading-7 text-slate-gray">
      {content}
    </p>
  </main>
</div>
